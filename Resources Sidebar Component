import React from 'react';
import { 
  List, 
  ListItem, 
  ListItemIcon, 
  ListItemText, 
  ListItemButton,
  Divider,
  Typography,
  Box
} from '@mui/material';
import SecurityIcon from '@mui/icons-material/Security';
import LocalHospitalIcon from '@mui/icons-material/LocalHospital';
import EventNoteIcon from '@mui/icons-material/EventNote';
import MenuBookIcon from '@mui/icons-material/MenuBook';
import MapIcon from '@mui/icons-material/Map';
import SportsBasketballIcon from '@mui/icons-material/SportsBasketball';
import FastfoodIcon from '@mui/icons-material/Fastfood';
import InfoIcon from '@mui/icons-material/Info';
import SettingsIcon from '@mui/icons-material/Settings';
import SubscriptionsIcon from '@mui/icons-material/Subscriptions';

const ResourcesSidebar = ({ onItemClick }) => {
  const resources = [
    {
      header: 'Emergency Services',
      items: [
        { 
          title: 'Campus Security', 
          icon: <SecurityIcon />, 
          action: () => { 
            console.log('Navigate to Campus Security');
            window.open('tel:+16125551234'); 
          } 
        },
        { 
          title: 'Health Services', 
          icon: <LocalHospitalIcon />, 
          action: () => { 
            console.log('Navigate to Health Services'); 
          } 
        },
      ]
    },
    {
      header: 'Academics',
      items: [
        { 
          title: 'Class Schedule', 
          icon: <EventNoteIcon />, 
          action: () => { 
            console.log('Navigate to Class Schedule'); 
          } 
        },
        { 
          title: 'Library Resources', 
          icon: <MenuBookIcon />, 
          action: () => { 
            console.log('Navigate to Library Resources'); 
          } 
        },
      ]
    },
    {
      header: 'Campus Life',
      items: [
        { 
          title: 'Campus Map', 
          icon: <MapIcon />, 
          action: () => { 
            console.log('Navigate to Campus Map'); 
          } 
        },
        { 
          title: 'Athletics', 
          icon: <SportsBasketballIcon />, 
          action: () => { 
            console.log('Navigate to Athletics'); 
          } 
        },
        { 
          title: 'Dining Options', 
          icon: <FastfoodIcon />, 
          action: () => { 
            console.log('Navigate to Dining Options'); 
          } 
        },
      ]
    },
    {
      header: 'Account',
      items: [
        { 
          title: 'Settings', 
          icon: <SettingsIcon />, 
          action: () => { 
            console.log('Navigate to Settings'); 
          } 
        },
        { 
          title: 'Subscription', 
          icon: <SubscriptionsIcon />, 
          action: () => { 
            console.log('Navigate to Subscription'); 
          } 
        },
        { 
          title: 'About UST-ID', 
          icon: <InfoIcon />, 
          action: () => { 
            console.log('Navigate to About'); 
          } 
        },
      ]
    }
  ];

  return (
    <Box>
      {resources.map((section, index) => (
        <React.Fragment key={index}>
          <List
            subheader={
              <Typography 
                sx={{ 
                  px: 2, 
                  pt: 2, 
                  pb: 1, 
                  fontWeight: 500, 
                  color: 'text.secondary',
                  fontFamily: 'Montserrat, sans-serif',
                }}
              >
                {section.header}
              </Typography>
            }
            dense
          >
            {section.items.map((item, itemIndex) => (
              <ListItem key={itemIndex} disablePadding>
                <ListItemButton
                  onClick={() => {
                    item.action();
                    if (onItemClick) onItemClick();
                  }}
                >
                  <ListItemIcon>{item.icon}</ListItemIcon>
                  <ListItemText primary={item.title} />
                </ListItemButton>
              </ListItem>
            ))}
          </List>
          {index < resources.length - 1 && <Divider />}
        </React.Fragment>
      ))}

      <Box sx={{ p: 2, mt: 2, bgcolor: '#f5f5f5', borderTop: '1px solid #e0e0e0' }}>
        <Typography variant="body2" color="text.secondary" align="center">
          Â© 2025 University of St. Thomas
        </Typography>
        <Typography variant="caption" color="text.secondary" align="center" sx={{ display: 'block', mt: 0.5 }}>
          Version 1.0.0
        </Typography>
      </Box>
    </Box>
  );
};

export default ResourcesSidebar;
